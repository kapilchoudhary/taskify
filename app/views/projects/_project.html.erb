<div id="<%= dom_id project %>">
  <div class="card my-4 shadow">
    <div class="card-body">
      <h5 style="float:left "><%= project.title %></h5>
      <%= form_tag(project_update_status_path(project), method: "put") do %>
        <%= select_tag :status,  options_for_select(Project.statuses.except(:All).map{|status| status}, Project.statuses[project.status]), onchange: 'this.form.submit();', class: 'badge bg-success ms-3' %>
      <% end %>
      <div class="clearfix">
      </div>
      <p class="card-text"><small class="text-muted"><%= project.start_date %></small></p>
      <p class="card-text"><%= project.description %></p>
      <% if params[:action] != "show" %>
        <%= link_to "Show this project", project, class:"btn btn-dark" %>
      <% end %>
      <%= link_to "Edit Project", edit_project_path(id: project.id), class: "btn btn btn-dark" %>
    </div>
  </div>
</div>
