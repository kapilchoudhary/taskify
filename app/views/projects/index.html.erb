<p style="color: green"><%= notice %></p>

<header class="pb-3 mb-4 border-bottom">
  <div class="d-flex align-items-center text-dark text-decoration-none">
    <span class="fs-4">Projects</span>
    <div class="ms-auto">
      <%= link_to "New project", new_project_path, class:"btn btn-primary" %>
    </div>
  </div>
</header>

<%= form_tag(search_projects_path, method: "get") do %>
  <div class="row g-3">
    <div class="col">
      <%= label_tag :start_date, 'Start Date', class: "fw-bold" %>
      <%= date_field_tag :start_date, params[:start_date], onchange: 'this.form.submit();', class: 'form-control' %>
    </div>
    <div class="col">
      <%= label_tag :end_date, 'End Date', class: "fw-bold" %>
      <%= date_field_tag :end_date, params[:end_date], onchange: 'this.form.submit();', class: 'form-control' %>
    </div>
    <div class="col">
        <%= label_tag :search, 'Search', class: "fw-bold" %>
      <div class="input-group">
        <%= text_field_tag :search, params[:search], onchange: 'this.form.submit();', class: 'form-control' %>
        <span class="input-group-btn">
          <%= submit_tag "Search", class: 'btn btn-primary' %>
        </span>
      </div>
    </div>
    <div class="col">
      <%= label_tag :status, 'Status', class: "fw-bold" %>
      <%= select_tag :status,  options_for_select(@status, params[:status] || 'All'), onchange: 'this.form.submit();', selected: 'All', class: 'form-control' %>
    </div>
  </div>
<% end %>

<div id="projects">
  <% @projects.each do |project| %>
    <%= render project %>
  <% end %>
</div>
