<%= form_with(model: project) do |form| %>
  <% if project.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
        <% project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mt-3">
    <%= form.label :title, class: "fw-bold" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group mt-2">
    <%= form.label :description, class: "fw-bold" %>
    <%= form.rich_text_area :description , class: "form-control" %>
  </div>

  <div class="row g-3 mt-3">
    <div class="col">
      <%= form.label :start_date, class: "fw-bold" %>
      <%= form.datetime_field :start_date, class: "form-control" %>
    </div>
    <div class="col">
      <%= form.label :status, class: "fw-bold" %>
      <%= form.select :status, Project.statuses.except(:All).keys.map{|status| status}, {}, { class: 'form-control' } %>
    </div>
  </div>

  <div class="form-group mt-3">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
