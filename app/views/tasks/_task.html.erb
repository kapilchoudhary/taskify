<div id="<%= dom_id task %>">
  <div class="col">
    <div class="card shadow-sm">
      <div class="card-body">
        <h5 class="card-title"><%= task.title %></h5>
        <p class="card-text"><%= truncate(strip_tags(task.content.to_s), length: 60) %></p>
        <div class="d-flex justify-content-between align-items-center">
          <div class="btn-group">
              <%= link_to "Edit task", edit_project_task_path(project_id:@project.id, id: @task.id), class: "btn btn-sm btn-outline-secondary" %>
              <%= link_to "Destroy task", [@task.project, @task], data: {
                              turbo_method: :delete,
                              turbo_confirm: "Are you sure?"
                            }, class: "btn btn-sm btn-outline-danger" %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
